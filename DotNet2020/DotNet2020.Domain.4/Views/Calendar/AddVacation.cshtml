@model DotNet2020.Domain._4_.Models.ModelView.VacationViewModel
    <div class="text-danger">@Html.ValidationMessage("Error")</div>
    <div class="text-danger">@Html.ValidationMessage("Error1")</div>
    <div class="text-danger">@Html.ValidationMessage("Error2")</div>
<div>
    @using (Html.BeginForm("AddVacation", "Calendar", FormMethod.Post))
