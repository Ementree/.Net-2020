@{
    ViewData["Title"] = "Calendar";
}
@using DotNet2020.Domain._4.Models
@model IEnumerable<DotNet2020.Domain._4.Models.AbstractCalendarEntry>
<link rel="stylesheet" href="~/css/calendar.css">
<div class="text-center">
    <h1 class="display-4">Hello in calendar</h1>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <table border="1" class="w-100">
                <tbody align="center">
                <tr>
                    <td>A</td>
                    <td>B</td>
                    <td>C</td>
                </tr>
                <tr>
                    <td>1</td>
                    <td>2</td>
                    <td>3</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-lg-12">
            <h3>Запросы на отпуск</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <table border="1" class="w-100">
                <tbody align="center">
                @foreach (var calendarEntry in Model)
                {
                    <tr>
                        <td>@calendarEntry.From до @calendarEntry.To</td>
                        <td>@{(calendarEntry.To - calendarEntry.From).Days} дней</td>
                        @if (calendarEntry.AbsenceType == AbsenceType.Vacation)
                        {
                            <td>Оплачиваемый отпуск</td>
                        }
                        @if (calendarEntry.AbsenceType == AbsenceType.Illness)
                        {
                            <td>Больничный</td>
                        }
                        <td>
                            <form asp-action="ApproveCalendarEntry" asp-controller="Calendar" method="post" asp-route-id="@calendarEntry.Id">
                                <div class="adminrecomadd">
                                    <button type="submit">Согласовать</button>
                                </div>
                            </form>
                            <form asp-action="RefuseCalendarEntry" asp-controller="Calendar" method="post" asp-route-id="@calendarEntry.Id">
                                <div class="adminrecomadd">
                                    <button type="submit">Отказать</button>
                                </div>
                            </form>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-lg-6">
            <form asp-action="AddRecommendation" asp-controller="Calendar" method="get">
                <div class="adminrecomadd">
                    <button type="submit">Обновить рекомендацию</button>
                </div>
            </form>
            <br />
            <form asp-action="AddHoliday" asp-controller="Calendar" method="get">
                <div class="adminrecomadd">
                    <button type="submit">Добавить праздничный день</button>
                </div>
            </form>
        </div>
        <div class="col-lg-6">
            <h3>Рекомендация для всех</h3>
            @if (ViewBag.Recommendation != null)
            {
                <p class="frame">@ViewBag.Recommendation.RecommendationText</p>
            }
        </div>
    </div>
</div>
