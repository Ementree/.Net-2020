@(Html.Kendo().Scheduler<Kendo.Mvc.Examples.Models.Scheduler.TaskViewModel>()
    .Name("scheduler")
    .Date(new DateTime(2013, 6, 13))
    .StartTime(new DateTime(2013, 6, 13, 7, 00, 00))
    .Selectable(true)
    .Editable(editable =>
    {
        editable.Resize(false);
    })
    .Height(600)
    .Views(views =>
    {
        views.DayView();
        views.WeekView(weekView => weekView.Selected(true));
        views.MonthView();
        views.TimelineView();
    })
    .Timezone("Etc/UTC")
    .DataSource(d => d
        .Model(m =>
        {
            m.Id(f => f.TaskID);
            m.RecurrenceId(f => f.RecurrenceID);
            m.Field(f => f.Title).DefaultValue("No title");
            m.Field(f => f.OwnerID).DefaultValue(1);
            m.Field(f => f.Title).DefaultValue("No title");
        })
        .Read("Event_Selection_Read", "Scheduler")
        .Create("Event_Selection_Create", "Scheduler")
        .Destroy("Event_Selection_Destroy", "Scheduler")
        .Update("Event_Selection_Update", "Scheduler")
    )
)
