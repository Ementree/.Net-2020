@if (ViewBag.Competences != null)
{
    foreach (var element in ViewBag.Competences)
    {
        @element.Competence 
            <form method="post">
                <p>@Html.ActionLink($"Изменить", "CompetencesManage", "Attestation", new { id = element.Id }, null) </p>
            </form>
            @if (element.Content.Length == 0)
            {
                <p>Список содержимого пуст!</p>
            }
            else
            {
                <p>Содержимое:</p>
                for (int i = 0; i < element.Content.Length; i++)
                {
                    <p>@element.Content[i]</p>
                }
            }
           
    }
}
