@model DotNet2020.Domain._5.Models.CreateReportModel
<style type="text/css">
    #CenterBlock {
        width: 75%;
        height: 100%;
        position: absolute;
        top: 57%;
        left: 53%;
        margin: -200px 0 0 -200px;
    }
</style>
<div class="text-center">
    <h2> Создать отчет</h2>
</div>
<div class="row">
    <div id="CenterBlock">
        <div class="col-md-4">
            <form asp-action="Show" method="post">
                <div class="form-group">
                    <label for="CreateReport">Название отчета:</label>
                    <input asp-for="ReportName" class="form-control" />
                    <span asp-validation-for="ReportName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="CreateReport">Проект:</label>
                    <br>
                    <select size="2" asp-for="Name">
                        @foreach (var project in Model.CreateProject)
                        {
                            <option value="@project">@project</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label for="CreateReport">Фильтр:</label>
                    <input asp-for="IssueFilter" class="form-control" />
                    <span asp-validation-for="IssueFilter" class="text-danger"></span>
                </div>
                <br>
                <br>
                <div class="text-center">
                    <button type="submit" class="btn btn-success btn-lg">Создать</button>
                </div>
            </form>
        </div>
    </div>
</div>