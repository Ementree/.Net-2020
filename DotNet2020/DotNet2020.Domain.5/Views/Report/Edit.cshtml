@model DotNet2020.Domain._5.Models.EditReportModel
<style type="text/css">
    #CenterBlock {
        width: 75%;
        height: 100%;
        position: absolute;
        top: 57%;
        left: 52.5%;
        margin: -200px 0 0 -200px;
    }
</style>
<div class="text-center">
    <h2>Редактировать отчет</h2>
</div>
<div class="row">
    <div id="CenterBlock">
        <div class="col-md-4">
            <form asp-action="Show" method="post">
                <div class="form-group">
                    <label for="EditReport">Название отчета:</label>
                    <input asp-for="ReportName" class="form-control" />
                    <span asp-validation-for="ReportName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="EditReport">Проект:</label>
                    <br>
                    <select size="2" asp-for="Name">
                        @foreach (var project in Model.Project)
                        {
                            <option value="@project">@project</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <div class="button-group">
                        <label for="EditReport">Пользователи:</label>
                        <button type="button" class="btn btn-default btn-sm dropdown-toggle" asp-for="UserName" data-toggle="dropdown"><span class="glyphicon glyphicon-cog"></span> <span class="caret"></span></button>
                        <ul class="dropdown-menu">
                            @foreach (var user in Model.UserFilter)
                            {
                                <li data-value="@user"><input type="checkbox" />&nbsp;@user</li>
                            }
                        </ul>
                    </div>
                    </div>
                    <div class="form-group">
                        <label for="EditReport">Режим работы:</label>
                        <br>
                        <div class="text-center">
                                <input class="form-check-input" type="radio" name="EditReport" asp-for="IsAssignee" value="IsAssignee" checked>
                                <label for="EditReport">Assignee&emsp;&emsp;</label>
                                <input class="form-check-input" type="radio" name="EditReport" asp-for="IsWorkItems" value="IsWorkItems">
                                <label for="EditReport">Work Items</label>
                        </div>
                    </div>
                <br>
                <div class="text-center">
                    <button type="submit" class="btn btn-success btn-lg">Редактировать</button>
                </div>
            </form>
        </div>
    </div>
</div>
