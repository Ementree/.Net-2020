@model DotNet2020.Domain._5.Models.EditReportModel
<style type="text/css">
    .container4 {
        margin: 0 auto;
        white-space: nowrap;
    }
    .checkbox {
    }
    .checkboxtext{
        display:inline-block
    }
    .multiselect {
        max-height: 100px;
        overflow-y: auto;
        white-space: nowrap;
    }
</style>
<div class="text-center">
    <h2>Редактировать отчет</h2>
</div>
<br>
<div class="row">
    <div class="container4">
        <form asp-action="ProcessEdit" method="post">
            <input asp-for="ReportId" value="@Model.ReportId" hidden />
            <div class="form-group">
                <label for="EditReport">Название отчета:</label>
                <input asp-for="ReportName" class="form-control" value="@Model.ReportName"/>
                <span asp-validation-for="ReportName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="EditReport">Проект: @Model.ProjectName</label>
            </div>
            <div class="form-group">
                <label for="EditReport">Пользователи:</label>
                <br>
            <div class="multiselect">
                @for (int i = 0; i < Model.AllUsers.Length; i++)
                {
                    <input class="checkbox" type="checkbox" checked="@Model.SelectedUsers[i]" asp-for="@Model.SelectedUsers[i]" />
                    <input asp-for="@Model.AllUsers[i]" value="@Model.AllUsers[i]" hidden />
                    <p class="checkboxtext">@Model.AllUsers[i]</p>
                    <br />
                }
            </div>
            </div>
            <div class="form-group">
                <label for="EditReport">Режим работы:</label>
                <br>
                <div class="text-center">
                    <input class="form-check-input" type="radio" name="EditReport" asp-for="IsAssignee" value="IsAssignee" checked>
                    <label for="EditReport">Assignee&emsp;&emsp;</label>
                    <input class="form-check-input" type="radio" name="EditReport" asp-for="IsWorkItems" value="IsWorkItems">
                    <label for="EditReport">Work Items</label>
                </div>
            </div>
            <br>
            <br>
            <div class="text-center">
                <button type="submit" class="btn btn-success btn-lg">Редактировать</button>
            </div>
        </form>
    </div>
</div>
