<p>@Html.ActionLink("Главная страница", "Index", "Attestation")</p>
<p>@Html.ActionLink("Сотрудники", "Workers", "Attestation")</p>
<p>@Html.ActionLink("Компетенции", "Competences", "Attestation")</p>
<p>@Html.ActionLink("Грейды", "Grades", "Attestation")</p>
<p>@Html.ActionLink("Вопросы", "Questions", "Attestation")</p>
<p>@Html.ActionLink("Аттестация", "Attestation", "Attestation")</p>
<p>@Html.ActionLink("Выгрузка", "Output", "Attestation")</p>

<p>@Html.ActionLink("Добавить", "WorkersAdd", "Attestation")</p>

@if (ViewBag.Workers != null && ViewBag.Workers.Count > 0)
{
    <table border="1">
        <tr>
            <th>ФИО</th>
            <th>Должность</th>
            <th>Оклад</th>
            <th>Премия</th>
            <th>Комментарий</th>
            <th>Компетенции</th>
            <th>Предыдущие места работы</th>
            <th>Опыт работы</th>
            <th></th>
        </tr>
        @foreach (var element in ViewBag.Workers)
        {
            <tr><td>@element.Worker.Name</td><td>@element.Worker.Position</td><td>@element.Worker.Salary</td><td>@element.Worker.Bonus</td><td>@element.Worker.Commentary</td>
                <td>
                    @if (element.Competences != null && element.Competences.Count>0)
                    {
                        @foreach (var competence in element.Competences)
                        {
                            <span>@competence.Competence</span>
                        }
                    }
                    else
                    {
                        <p>Компетенции не добавлены</p>
                    }
                </td><td>@element.Worker.PreviousWorkPlaces</td><td>@element.Worker.Experience</td>
                <td>
                    @Html.ActionLink($"Изменить", "WorkersUpdate", "Attestation", new {id = element.Worker.Id}, null)
                    @Html.ActionLink($"Удалить", "WorkersRemove", "Attestation", new {id = element.Worker.Id}, null)
                    </td></tr>
        }
    </table>
}